<h1> Listing Authors </h1>
<%= link_to "New Author", new_author_path %>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th> Email </th>
      <th> Gender </th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.email %></td>
        <td><%= author.gender %></td>
        <td><%= link_to 'View', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%=  button_to "delete", author_path(author.id), method: :delete  %></td>
      </tr>
    <% end %>
  </tbody>
</table>