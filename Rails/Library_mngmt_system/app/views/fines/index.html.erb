<h1> Listing Fines </h1>
<%= link_to "New Fine", new_fine_path %>
<br>

<% if params[:search] %>
<%= link_to "Previous Page", fines_path(page: @page - 1, search: params[:search])  if @page!= 0 %>
|
<%= link_to "Next Page", fines_path(page: @page + 1, search: params[:search])  if @page < (@fines_count/2) %>
<% else %>
<%= link_to "Previous Page", fines_path(page: @page - 1)  if @page!= 0 %>
|
<%= link_to "Next Page", fines_path(page: @page + 1)  if @page < (@fines_count/3) %>
<% end %>

<table>
  <thead>
    <tr>
      <th> Issue_returns_id </th>
      <th> Student_id </th>
      <th> Amount </th>
      <th> Payment_status </th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
   <% if @fines %>
    <% @fines.each do |fine| %>
      <tr>
        <td><%= fine.issue_returns_id %></td>
        <td><%= fine.student_id %></td>
        <td><%= fine.amount %></td>
        <td><%= fine.payment_status %></td>
        <td><%= link_to 'View', fine %></td>
        <td><%= link_to 'Edit', edit_fine_path(fine) %></td>
        <td><%=  button_to "delete", fine_path(fine.id), method: :delete  %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>