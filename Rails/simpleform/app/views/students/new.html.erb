Enter new student information
<br>
<%= form_for @student do |f| %>
  Firstname: <%= f.text_field :firstname %><br />
  Lastname: <%= f.text_field :lastname %><br />
  Gender: <%= f.radio_button :gender, :male %> Male
  <%= f.radio_button :gender, :female %> Female<br />
  Country: <%= f.select :country , ['India',
                                'China',
                                'United States',
                                'Russia',
                                'Brazil',
                                'Mexico',
                                'Germany',
                                'France',
                                'Italy',
                                'Spain',
                                'Cuba',
                                'Belgium'] %>
  <%= f.submit "Create" %>
<% end%>
<br>
Display all students information
<% if !@students.blank? %><br />
<table>

  <tr>
    <th> Name </th>
    <th> Gender </th>
    <th> Country </th>
  </tr>

  <%  @students.each do |item| %>
    <tr><td><%= item.firstname %> <%= item.lastname %></td> <td><%= item.gender %></td><td><%= item.country %></td></tr> 
  <% end %>
</table>  
<% end %>  